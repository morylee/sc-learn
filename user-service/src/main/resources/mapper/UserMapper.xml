<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mm.user.service.dao.UserMapper" >

    <resultMap id="BaseResultMap" type="com.mm.user.service.model.User" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="uuid" property="uuid" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="nickname" property="nickname" jdbcType="VARCHAR" />
        <result column="logo_path" property="logoPath" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="INTEGER" />
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP" />
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="BaseColumnList" >
        id, uuid, name, nickname, logo_path, password, state, created_at, updated_at
    </sql>

    <insert id="save" parameterType="com.mm.user.service.model.User" useGeneratedKeys="true" keyProperty="id">
        insert into t_user (uuid, name, nickname, logo_path, password, state, created_at, updated_at)
        values(#{uuid}, #{name}, #{nickname}, #{logoPath}, #{password}, #{state}, #{createdAt}, #{updatedAt})
    </insert>

    <select id="update" parameterType="com.mm.user.service.model.User">
        update t_user set
        nickname = #{nickname},
        logo_path = #{logoPath},
        password = #{password},
        state = #{state},
        updated_at = #{updatedAt}
        where id = #{id}
    </select>

    <select id="load" resultMap="BaseResultMap" parameterType="com.mm.user.service.model.User" >
        select
        <include refid="BaseColumnList" />
        from t_user
        <where>
            <if test="uuid != null and uuid != ''">
                uuid = #{uuid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

</mapper>
